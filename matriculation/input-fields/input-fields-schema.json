{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Confirmation of Matriculation",
    "type": "object",
    "properties": {
        "credentialTitle":{
            "title": "Credential title",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        },
        "fullName":{
            "title": "Full name",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        },"dateOfBirth":{
            "title":"Date of birth",
            "description": "",
            "type": "string",
            "format": "date-time"
        },"personTitle":{
            "title": "Person title",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        },"studentNumber":{
            "title":  "Student number",
            "description": "",
            "type": "string"
        }, "currentEcts":{
            "title":"Current ECTS",
            "description": "",
            "type": "number"
        }, "maxEcts":{
            "title": "Max ECTS",
            "description": "",
            "type": "number"
        }, "deadline": {
            "title": "Deadline",
            "description": "",
            "type": "string",
            "format": "date-time"
        }, "matriculationStart":{
            "title": "Matriculation Start",
            "description": "",
            "type": "string",
            "format": "date-time"

        }, "matriculationEnd": {
            "title": "Matriculation End",
            "description": "",
            "type": "string",
            "format": "date-time"

        }, "programmeTitle":{
            "title": "Programme Title",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        }, "programmeStatus":{
            "title":"Status",
            "description": "",
            "type": "string",
            "enum": ["current", "withoutDegree", "withDegree"]
        }, "validUntil":{
            "title": "Valid until",
            "description": "Date the certificate becomes expired.",
            "type": "string",
            "format": "date-time"
        }
    }, "required": [
        "credentialTitle",
        "currentEcts",
        "maxEcts",
        "matriculationStart",
        "matriculationEnd",
        "programmeTitle",
        "programmeStatus"
    ]
}