            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string",
                    "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        },
        "dateIssued":{
            "title":"Issued date",
            "description": "Issued date.",
            "type": "string",
            "format": "date-time"
