{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Simplified European Digital Credential",
    "description": "A simplified schema for European Digital Credential that is compatible with the full ELM 3.2 schema",
    "type": "object",
    "properties": {
        "credentialTitle":{
            "title":"Credential title",
            "description": "The official title of the credential being issued",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string",
                    "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        },
        "fullName": {
            "title":"Full name",
            "description": "The full name of the recipient of this credential",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
              
        },
        "achievementDescription":{
            "title": "Achievement description",
