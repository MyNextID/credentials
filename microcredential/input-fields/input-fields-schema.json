            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string",
                    "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
      "credentialTitle",
      "fullName",
      "gradeAchieved",
      "title",
      "ectsPoints",
      "achievementTitle",
      "awardingStatement"
    ]
