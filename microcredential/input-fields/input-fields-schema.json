            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string",
                    "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        },
        "verificationMethod": {
            "title": "Method",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string",
                    "description": "A string value for a specific language code."
                }
            },
            "additionalProperties": false
        },
        "type": {
            "title": "Type",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
              "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
              }
            },
            "additionalProperties": false
        },
        "mode":{
            "title":"Mode",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
              "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
              }
            },
            "additionalProperties": false
        },
        "title":{
            "title":"Title",
            "description": "",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
            "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
            }
            },
            "additionalProperties": false
        },
        "ectsPoints":{
            "title":"ECTS points",
            "description": "ECTS points.",
            "type": "string"
            
        },
        "achievementTitle":{
            "title": "Achievement title",
            "description": "The title of the achievement awarded to the recipient",
            "type": "object",
            "x-format": "languageMap",
            "patternProperties": {
              "^[a-z]{2}$": {
                "type": "string",
                "description": "A string value for a specific language code."
              }
            },
            "additionalProperties": false
